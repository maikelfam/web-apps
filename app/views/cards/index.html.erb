<%
cards = [2, 3, 4, 5, 6, 7, 8, 9, 10, "jack", "queen", "king", "ace"]
suits = ["hearts", "spades", "diamonds", "clubs"]
deck = []
for card in cards
    for suit in suits
        deck << "#{card}_of_#{suit}"
    end
end
shuffled_deck = deck.shuffle 
hand = shuffled_deck[0,5]
%>
<h1> Draw 5 cards</h1>

<% for card in hand %>
    <img src="/images/cards/<%= card %>.svg"
<% end %>
